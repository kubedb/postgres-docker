FROM postgres:9.6.20-alpine

RUN set -x \
  && apk add --update --no-cache ca-certificates

ENV PV /var/pv
ENV PGDATA $PV/data
ENV PGWAL $PGDATA/pg_wal
ENV INITDB /var/initdb

COPY ./scripts /scripts

VOLUME ["$PV"]
RUN chown postgres /var/pv

ENV STANDBY warm

COPY tini /tini
RUN chmod +x /tini

USER postgres
ENTRYPOINT ["./tini", "--"]
CMD ["/scripts/run.sh"]



